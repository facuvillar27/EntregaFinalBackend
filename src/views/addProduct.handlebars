<div>
    <h1>Agregar Producto</h1>
    <form id="add-product-form" class="add-product-form">
        <div class="form-group">
            <label for="title" >Título:</label>
            <input type="text" id="title" name="title" placeholder="Ingrese el título del producto" required>
        </div>
        <div class="form-group">
            <label for="description" >Descripción:</label>
            <input type="text" id="description" name="description" placeholder="Ingrese la descripción del producto" required>
        </div>
        <div class="form-group">
            <label for="price" >Precio:</label>
            <input type="number" id="price" name="price" placeholder="Ingrese el precio del producto" required>
        </div>
        <div class="form-group">
            <label for="code" >Código:</label>
            <input type="text" id="code" name="code" placeholder="Ingrese el código del producto" required>
        </div>
        <div class="form-group">
            <label for="thumbnail" >Imagen:</label>
            <input type="text" id="thumbnail" name="thumbnail" placeholder="Ingrese la URL de la imagen del producto">
        </div>
        <div class="form-group">
            <label for="category" >Categoría:</label>
            <input type="text" id="category" name="category" placeholder="Ingrese la categoría del producto" required>
        </div>
        <div class="form-group">
            <label for="stock" >Stock:</label>
            <input type="number" id="stock" name="stock" placeholder="Ingrese el stock del producto" required>
        </div>
        <button id="add-product" type="submit">Agregar producto</button>
    </form>
</div>

<script src="js/addProduct.js"></script>
